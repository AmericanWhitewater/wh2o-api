{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es7"],
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "moduleResolution": "Node",
    "allowJs": false,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/testUtils.ts"]
}
